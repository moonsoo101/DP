<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainvideocontainer"
        android:background="#d8d8d8"
        android:clipChildren="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/fullScreenCont"
            android:weightSum="1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/thumb"
            android:scaleType="fitCenter" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:id="@+id/mainOptcontainer">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:orientation="horizontal"
                            android:id="@+id/videoInfoCont"
                            android:gravity="center_vertical"
                            android:layout_toLeftOf="@+id/repeatVideo">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:id="@+id/cpLogo"
                                android:layout_marginStart="10dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="19.7dp"
                                android:layout_marginStart="6.7dp"
                                android:id="@+id/title"
                                android:layout_toRightOf="@+id/cpLogo"
                                android:textColor="#8a00bcd4"
                                android:textSize="13.3sp"
                                android:gravity="center_vertical"
                                android:fontFamily="NotoSansCJKkr-Regular"/>
                        </RelativeLayout>
                        <Button
                            android:layout_width="30dp"
                            android:layout_height="33.3dp"
                            android:id="@+id/playbtn"
                           android:layout_centerInParent="true"
                            android:background="@drawable/bigplay" />
                        <Button
                            android:layout_width="17dp"
                            android:layout_height="33.3dp"
                            android:id="@+id/pausebtn"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bigpause" />
                        <Button
                            android:layout_width="19.7dp"
                            android:layout_height="19.7dp"
                            android:layout_marginTop="10.3dp"
                            android:layout_marginRight="23.7dp"
                            android:id="@+id/repeatEditor"
                            android:layout_toLeftOf="@+id/repeatSubic"
                            android:background="@drawable/ic_repeat_editor"/>
                        <Button
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/repeatVideo"
                            android:layout_marginTop="10.3dp"
                            android:layout_marginRight="23.7dp"
                            android:layout_toLeftOf="@id/repeatEditor"
                            android:background="@drawable/ic_repeat_video"/>
                        <Button
                            android:layout_width="19.7dp"
                            android:layout_height="19.7dp"
                            android:layout_marginTop="10.3dp"
                            android:layout_marginRight="10.3dp"
                            android:id="@+id/repeatSubic"
                            android:background="@drawable/pagic_repeat_subic_repeat_sube_1"
                            android:layout_alignParentRight="true"/>
                        <Button
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="10.3dp"
                            android:layout_marginTop="23.3dp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/repeatSubic"
                            android:background="@drawable/ic_bookmark"
                            android:id="@+id/bookmarkBtn"/>
                        <Button
                            android:layout_width="16.3dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="10.3dp"
                            android:layout_marginTop="24.7dp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/bookmarkBtn"
                            android:background="@drawable/ic_notified"
                            android:id="@+id/noficationBtn"/>
                        <Button
                            android:layout_width="18.3dp"
                            android:layout_height="18.3dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:id="@+id/fullScreenBtn"
                            android:background="@drawable/ic_expand"/>
                        <Button
                            android:layout_width="27.1dp"
                            android:layout_height="20dp"
                            android:layout_toLeftOf="@+id/fullScreenBtn"
                            android:layout_marginBottom="15dp"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:layout_marginRight="20dp"
                            android:text="KR"
                            android:textColor="#00bcd4"
                            android:textSize="11sp"
                            android:fontFamily="NotoSansCJKkr-Regular"
                            android:id="@+id/langBtn"
                            android:background="@drawable/rectangle_15"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="15dp"
                            android:layout_marginStart="10dp"
                            android:id="@+id/videoCurrent"
                            android:textAlignment="viewEnd"
                            android:text="33:33"
                            android:textColor="#00bcd4"
                            android:textSize="12sp"
                            android:fontFamily="NotoSansCJKkr-DemiLight"/>
                        <SeekBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/videoCurrent"
                            android:layout_toLeftOf="@+id/videoDur"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="15dp"
                            android:id="@+id/videoSeekbar"
                            android:progressTint="#00bcd4"
                            android:secondaryProgressTint="#70eeff"
                            android:backgroundTint="#ffffff"
                            android:thumb="@drawable/video_seekbar"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/videoDur"
                            android:textColor="#ffffff"
                            android:text="2312d"
                            android:textSize="12sp"
                            android:layout_marginBottom="15dp"
                            android:layout_toLeftOf="@+id/langBtn"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="15dp"
                            android:fontFamily="NotoSansCJKkr-DemiLight"/>
                        <android.support.v7.widget.RecyclerView
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:background="#00000000"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="-90dp"
                            android:id="@+id/recommendVideo">
                        </android.support.v7.widget.RecyclerView>
                    </RelativeLayout>
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/progress" />
                </FrameLayout>
            </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/subFrame"
                android:background="#8a00bcd4">
            </FrameLayout>
            <TextView
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="13.3sp"
                android:textColor="#ffffff"
                android:fontFamily="NotoSansCJKkr-Regular"
                android:textAlignment="center"
                android:text="저것들은 뭐야??"
                />
        </FrameLayout>
        </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</FrameLayout>

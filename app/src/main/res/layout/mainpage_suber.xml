<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16.3dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13.7dp"
        android:gravity="center_horizontal"
        android:id="@+id/heartCont"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="13.9dp"
            android:layout_height="12.9dp"
            android:id="@+id/heartBtn"
            android:scaleType="center"
            android:src="@drawable/ic_heart"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heartCount"
            android:textColor="#61000000"
            android:textSize="11sp"
            android:text="213.3k"/>
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="33.3dp"
        android:layout_height="33.3dp"
        android:id="@+id/suberLogo"
        android:src="@drawable/avatar_copy_2"
        android:layout_marginLeft="41dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123123"
        android:textSize="13sp"
        android:textColor="#00bcd4"
        android:layout_marginTop="1.3dp"
        android:id="@+id/nickName"
        android:layout_toRightOf="@+id/suberLogo"
        android:layout_marginLeft="13dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nickName"
        android:layout_marginTop="1.3dp"
        android:id="@+id/FanT"
        android:textSize="12sp"
        android:text="Fan "
        android:textColor="#8a000000"
        android:layout_marginLeft="9.7dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/FanT"
        android:layout_marginTop="1.3dp"
        android:id="@+id/fanCount"
        android:textSize="12sp"
        android:text="123"
        android:textColor="#16afca" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="6.3dp"
        android:id="@+id/language"
        android:textSize="12sp"
        android:text="Spain"
        android:textColor="#b3000000"
        android:layout_toRightOf="@+id/suberLogo"
        android:layout_below="@id/nickName"/>
    <TextView
        android:layout_width="wrap_content"
        android:minHeight="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_marginLeft="22.7dp"
        android:layout_marginTop="5.3dp"
        android:textSize="12sp"
        android:textColor="#de000000"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="fsadfdsfsdfsdfsdfsdfsdfㅇㄹㄴㅇㄹㄴㅇㄹㄴㄹㄴㄹ"
        android:layout_toLeftOf="@+id/foldBtn"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/language"
        android:layout_below="@id/nickName"/>
    <ImageButton
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:rotation="180"
        android:background="#00000000"
        android:id="@+id/foldBtn"
        android:src="@drawable/ic_dropdown"
        android:layout_marginTop="5.3dp"
        android:layout_marginRight="17.1dp"
        android:scaleType="center"
        android:layout_toLeftOf="@+id/fanBtn"
        android:layout_below="@id/nickName"
        />
    <ImageButton
        android:layout_width="47.3dp"
        android:layout_height="20dp"
        android:id="@+id/fanBtn"
        android:layout_marginTop="2.7dp"
        android:layout_marginRight="10dp"
        android:background="#00000000"
        android:layout_alignParentEnd="true"
        android:src="@drawable/button_fan_copy"
        android:scaleType="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="37.7dp"
        android:layout_below="@+id/description"
        android:layout_marginTop="17.7dp"
        android:background="#bdbdbd"/>
</RelativeLayout>
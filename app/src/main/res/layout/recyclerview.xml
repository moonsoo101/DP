<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="9.7dp"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="16.3dp"
        android:layout_marginLeft="10dp"
        android:minWidth="1dp"
        android:id="@+id/popularBtn"
        android:textAllCaps="false"
        android:layout_below="@+id/menutitle1"
        android:textColor="#757575"
        android:textSize="13sp"
        android:typeface="sans"
        android:fontFamily="NotoSansCJKkr-Medium"
        android:text="Popular"
        android:background="#00000000"/>
    <Button
        android:layout_width="53.4dp"
        android:layout_height="16.3dp"
        android:layout_marginLeft="17dp"
        android:textAllCaps="false"
        android:minWidth="1dp"
        android:id="@+id/newestBtn"
        android:layout_below="@+id/menutitle1"
        android:layout_toRightOf="@+id/popularBtn"
        android:textColor="#757575"
        android:textSize="13sp"
        android:typeface="sans"
        android:fontFamily="NotoSansCJKkr-Medium"
        android:text="Newest"
        android:background="#00000000"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="19.7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:id="@+id/recyclerView"></android.support.v7.widget.RecyclerView>
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="#00000000"
        android:layout_marginTop="12dp"
        android:scaleType="center"
        android:layout_gravity="center"
        android:src="@drawable/ic_page_1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.7dp"
        android:background="#e0e0e0"
        android:layout_marginTop="3.8dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_marginTop="8.7dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="16.3dp"
        android:layout_marginLeft="16.7dp"
        android:orientation="horizontal"
        android:id="@+id/replyerInfo"
        android:gravity="center_vertical">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="abcd"
        android:id="@+id/name"
        android:textColor="#4dd5e1"
        android:textSize="11sp"
        android:typeface="sans"
        android:fontFamily="NotoSansCJKkr-Regular"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/replyday"
            android:layout_marginLeft="13.7dp"
            android:text="abcd"
            android:textColor="#4d000000"
            android:textSize="10sp"
            android:typeface="sans"
            android:fontFamily="NotoSansCJKkr-DemiLight"/>
    </LinearLayout>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:layout_marginRight="69.3dp"
    android:layout_marginLeft="16.7dp"
    android:id="@+id/replyText"
    android:textColor="#de000000"
    android:gravity="center_vertical"
    android:typeface="sans"
    android:textSize="11sp"
    android:fontFamily="NotoSansCJKkr-Regular"
    android:text="이런 가나다라 마바사 아자차 카타파하 abc defg hijk lnm\n hu"
    android:maxLines="2"
    android:layout_below="@+id/replyerInfo"
    android:layout_alignParentStart="true" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:layout_marginRight="12.7dp"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="13.3dp"
            android:layout_height="13.3dp"
            android:id="@+id/heartBtn"
            android:background="@drawable/ic_heart"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heartCount"
            android:layout_alignParentRight="true"
            android:text="213"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.3dp"
        android:id="@+id/replyInfoCont"
        android:layout_marginLeft="16.7dp"
        android:layout_below="@+id/replyText"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:minWidth="0dp"
            android:background="#00000000"
            android:textSize="11.7sp"
            android:textColor="#61000000"
            android:typeface="sans"
            android:fontFamily="NotoSansCJKkr-Regular"
            android:id="@+id/rereplyBtn"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:minWidth="0dp"
            android:background="#00000000"
            android:layout_marginLeft="17dp"
            android:text="답글 달기"
            android:typeface="sans"
            android:fontFamily="NotoSansCJKkr-Medium"
            android:textColor="#4d000000"
            android:textSize="11.7sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#b5b5b5"
        android:layout_marginTop="7dp"
        android:layout_below="@id/replyInfoCont"
        android:layout_marginLeft="10dp"
        android:id="@+id/lastLine"/>

</RelativeLayout>
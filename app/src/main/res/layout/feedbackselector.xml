<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:id="@+id/nationalCont">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <RelativeLayout
                android:layout_width="112.3dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="13.3dp"
                    android:layout_height="13.3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/icCountry"
                    android:background="@drawable/ic_country"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/icCountry"
                    android:layout_marginLeft="10dp"
                    android:textSize="13.3sp"
                    android:layout_centerVertical="true"
                    android:textColor="#8a000000"
                    android:text="Country"
                    android:fontFamily="NotoSansCJKkr-Medium"
                    />
                <ImageButton
                    android:layout_width="13.3dp"
                    android:layout_height="13.3dp"
                    android:id="@+id/addCountBtn"
                    android:background="#00000000"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_page"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/nationalRecy"
                android:layout_marginLeft="45.7dp"
                android:layout_gravity="center_vertical"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#b5b5b5"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:id="@+id/langCont">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:layout_width="112.3dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="13.3dp"
                        android:layout_height="13.3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/icLang"
                        android:background="@drawable/ic_language"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/icLang"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:textSize="13.3sp"
                        android:textColor="#8a000000"
                        android:text="Language"
                        android:fontFamily="NotoSansCJKkr-Medium"
                        />
                    <ImageButton
                        android:layout_width="13.3dp"
                        android:layout_height="13.3dp"
                        android:id="@+id/addLangBtn"
                        android:background="#00000000"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_page"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="45.7dp"
                    android:id="@+id/langRecy"></android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#b5b5b5"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:id="@+id/genreCont">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <RelativeLayout
                android:layout_width="112.3dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="13.3dp"
                    android:layout_height="13.3dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/icGenre"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_genre"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/icGenre"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textSize="13.3sp"
                    android:textColor="#8a000000"
                    android:text="Language"
                    android:fontFamily="NotoSansCJKkr-Medium"
                    />
                <ImageButton
                    android:layout_width="13.3dp"
                    android:layout_height="13.3dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/addGenreBtn"
                    android:background="#00000000"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_page"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="45.7dp"
                android:id="@+id/genrelRecy"></android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:id="@+id/lastLine"
            android:background="#f5f5f5"/>
    </LinearLayout>
    </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="113dp"
    android:background="#ffffff">
    <FrameLayout
        android:layout_width="170.7dp"
        android:layout_height="96dp"
        android:layout_marginLeft="8.7dp"
        android:layout_marginTop="8.3dp"
        android:id="@+id/thumbCont">
        <ImageButton
            android:layout_width="170.7dp"
            android:layout_height="96dp"
            android:id="@+id/thumb"
            android:scaleType="centerCrop"
            android:background="?attr/selectableItemBackground"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="6.7dp"
                android:layout_marginLeft="6.7dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/avatar_copy_2"
                android:id="@+id/cpLogo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/videoDur"
                android:textColor="#ffffff"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:background="#80000000"
                android:textSize="12sp"
                android:typeface="sans"
                android:fontFamily="NotoSansCJKkr-DemiLight"
                android:text="Part.5"/>
        </RelativeLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#b5b5b5"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8.7dp"
        android:layout_marginBottom="0.7dp"
        android:layout_marginRight="11.3dp"/>
    <TextView
        android:layout_width="123.7dp"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:maxLines="2"
        android:layout_toRightOf="@+id/thumbCont"
        android:layout_marginTop="9.3dp"
        android:layout_marginLeft="6dp"
        android:textSize="12sp"
        android:textColor="#de000000"
        android:typeface="sans"
        android:fontFamily="NotoSansCJKkr-Regular"
        android:text="dfaafddsfasdfsdsf\ndasfdsfsds"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="23.3dp"
        android:layout_height="23.3dp"
        android:id="@+id/profileImg"
        android:layout_toRightOf="@id/thumbCont"
        android:layout_below="@+id/title"
        android:layout_marginTop="7.3dp"
        android:layout_marginLeft="6.3dp"
        android:src="@drawable/ic_edit_2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#b32d2d2d"
        android:id="@+id/nickName"
        android:textSize="12sp"
        android:typeface="sans"
        android:text="자막을 기다립니다."
        android:fontFamily="NotoSansCJKkr-Medium"
        android:layout_toRightOf="@+id/profileImg"
        android:layout_below="@+id/title"
        android:layout_marginLeft="9.7dp"
        android:layout_marginTop="10.7dp"
        />
    <Button
    android:layout_width="11.3dp"
    android:layout_height="11.3dp"
    android:layout_marginTop="10.7dp"
    android:layout_marginLeft="4.7dp"
    android:layout_below="@+id/title"
        android:id="@+id/subIcon"
    android:background="@drawable/ic_edit_copy"
    android:layout_toRightOf="@id/nickName"/>
    <Button
        android:layout_width="8.3dp"
        android:layout_height="12dp"
        android:layout_marginTop="10.7dp"
        android:layout_marginLeft="4.7dp"
        android:layout_below="@+id/title"
        android:background="@drawable/ic_microphone_2"
        android:layout_toRightOf="@id/subIcon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/language"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="6.7dp"
        android:layout_below="@id/profileImg"
        android:layout_toRightOf="@id/thumbCont"
        android:textColor="#61000000"
        android:textSize="10sp"
        android:typeface="sans"
        android:fontFamily="NotoSansCJKkr-Regular"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14.3dp"
        android:layout_marginBottom="6.3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/heartBtn"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_heart"
            android:scaleType="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:id="@+id/heartCount"
            android:textSize="10sp"
            android:fontFamily="NotoSansCJKkr-Regular"
            android:typeface="sans"
            android:textColor="#9b9b9b"
            android:text="123.3tr"
            />
    </LinearLayout>
</RelativeLayout>